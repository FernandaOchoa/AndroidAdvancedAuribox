<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="monsh.com.lab1.MainActivity">

    <Button
        android:id="@+id/btn_saludar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/img"
        android:layout_marginBottom="42dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="@string/hola"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/large"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription=""
        android:scaleType="centerCrop"
        android:src="@drawable/rosa" />

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_texto"
        android:layout_alignStart="@+id/edt_texto"
        android:layout_below="@+id/edt_texto"
        android:layout_marginTop="39dp"
        android:gravity="center_horizontal"
        android:text="Mensajito"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/xlarge"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/edt_texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:hint="@string/saludo"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorAccent" />

</RelativeLayout>
